# Production Environment Variables for Railway
# Copy these to Railway's Variables tab

# Node Environment
NODE_ENV=production

# Server Port (Railway sets this automatically)
PORT=8080

# MongoDB Atlas Connection
# IMPORTANT: Add 0.0.0.0/0 to MongoDB Atlas Network Access whitelist for Railway
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/reliefnet?retryWrites=true&w=majority

# SendGrid Email Configuration
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your-verified-sender@example.com
SENDGRID_REPLY_TO=your-verified-sender@example.com

# JWT Secret (generate a strong random secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Firebase Admin SDK Configuration
# Extract from serviceAccountKey.json.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Alternative: Base64 encoded Firebase service account
# Generate with PowerShell: [Convert]::ToBase64String([IO.File]::ReadAllBytes("serviceAccountKey.json.json"))
# FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_json

# CORS Origins (comma-separated)
# Include your Android app, web frontend, and any other allowed origins
ALLOWED_ORIGINS=https://yourfrontend.com,capacitor://localhost,http://localhost,https://reliefnet.com

# Razorpay Payment Gateway (if using)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_TIMEOUT_HOURS=24
